---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Introduction from "../components/Introduction/Introduction.astro";
import WorkExperiences from "../components/WorkExperiences/WorkExperiences.astro";
import Projects from "../components/Projects/Projects.astro";
import Coursework from "../components/Coursework/Coursework.astro";
import Footer from "../components/Footer/Footer.astro";
---

<Layout title="Ng Jing Xue">
  <Header />
  <div class="mt-[70px]">
    <Introduction />
  </div>
  <div
    class="flex flex-col gap-10 py-16 px-2 md:px-10 lg:px-16 xl:px-36 2xl:px-[18rem] space-y-7 bg-[#FFFAFA] dark:bg-[#121212] dark:text-[#FAFAFA]"
  >
    <WorkExperiences />
    <Projects />
    <Coursework />
  </div>
  <Footer />
  <div>
    <img
      src="/icons/upArrowCircle.svg"
      class="w-6 fixed right-8 bottom-8 cursor-pointer opacity-50 hover:opacity-100"
      id="jumpTopButton"
      alt="scroll to top button"
    />
  </div>
</Layout>
<script>
  const jumpTopBtn = document.getElementById("jumpTopButton");

  jumpTopBtn.addEventListener("click", () => {
    window.scrollTo({ top: 0 });
  });

  window.addEventListener("scroll", () => {
    // Hide jumpTopButton if already at the top
    if (window.scrollY === 0) {
      jumpTopBtn.style.display = "none";
    } else {
      jumpTopBtn.style.display = "block";
    }
  });
</script>
