---
import CoursesWork from "../../data/MyModules";
---

<div id="courseWork" class="scroll-mt-[90px]">
  <div class="mb-5 text-4xl text-center font-mono sectionHeader invisible">
    <h2 aria-label="coursework">Coursework</h2>
  </div>
  <hr class="border-gray-300 dark:border-gray-600" />
  <table class="mt-5 w-full text-center table-auto">
    <thead>
      <tr>
        <th>Course Code</th>
        <th>Course Title</th>
        <th>Course Notes</th>
      </tr>
    </thead>
    {
      CoursesWork?.map((semester) => (
        <tbody>
          <tr class="bg-slate-200 font-bold dark:bg-[#3d3d3d]">
            <td colspan="3">{semester?.term}</td>
          </tr>
          {semester?.modules?.map((course) => (
            <tr>
              <td>{course?.code}</td>
              <td>{course?.title}</td>
              {course?.notes && (
                <td class="flex justify-center">
                  <a
                    href={course?.notes}
                    target="_blank"
                    rel="noreferrer"
                    aria-label={`${course?.code}'s notes`}
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-5 h-5 block m-auto"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 00-1.883 2.542l.857 6a2.25 2.25 0 002.227 1.932H19.05a2.25 2.25 0 002.227-1.932l.857-6a2.25 2.25 0 00-1.883-2.542m-16.5 0V6A2.25 2.25 0 016 3.75h3.879a1.5 1.5 0 011.06.44l2.122 2.12a1.5 1.5 0 001.06.44H18A2.25 2.25 0 0120.25 9v.776"
                      />
                    </svg>
                  </a>
                </td>
              )}
            </tr>
          ))}
        </tbody>
      ))
    }
  </table>
</div>
